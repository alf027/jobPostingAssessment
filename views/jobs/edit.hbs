<div class="row">

        <h2 class="col-md-3">Edit Job Posting</h2>

        <form class="form-horizontal col-md-2 " action="/jobs/{{_id}}/delete" method="post">
            <div class="form-group">
                <div class="">
                    <button class="btn btn-default" type="submit">Delete Post</button>
                </div>
            </div>
        </form>

</div>

<div class="row">

    <form method="post" action="/jobs/{{_id}}" class="form-horizontal col-md-10">
        <div class="form-group">
            <label for="jobTitle" class="col-sm-2 control-label">Job Title</label>

            <div class="col-sm-10">
                <input value="{{jobTitle}}" required name="jobTitle" type="text" class="form-control" id="jobTitle"
                       placeholder="Job Title">
            </div>
        </div>
        <div class="form-group">
            <label for="companyName" class="col-sm-2 control-label">Company Name</label>

            <div class="col-sm-10">
                <input value="{{companyName}}" required type="text" class="form-control" name="companyName"
                       id="companyName"
                       placeholder="Company Name">
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Description</label>

            <div class="col-sm-10">
                <textarea required name="description" id="description" class="form-control"
                          rows="10">{{description}} </textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="responsibilities" class="col-sm-2 control-label">Responsibilities</label>

            <div class="col-sm-10">
                <textarea name="responsibilities" id="responsibilities" class="form-control"
                          rows="10">{{responsibilities}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="isOpen" class="col-sm-2 control-label">Open?</label>

            <div class="col-sm-10">
                <input type="checkbox" name="isOpen" {{#if isOpen}}checked{{/if}}>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save Changes</button>
                <a href="/jobs/{{_id}}">
                    Cancel
                </a>
            </div>
            <div class="col-sm-offset-2 col-sm-10">

            </div>

        </div>
    </form>
</div>
